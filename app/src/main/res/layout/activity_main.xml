<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="586dp">
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="112dp"
                          android:layout_marginTop="20dp">
                <TextView
                        android:text="PERCOBAAN ACTIVITY"
                        android:layout_width="269dp"
                        android:layout_height="102dp"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:textAlignment="center" android:paddingTop="15dp"/>

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/pro"
                        android:id="@+id/imageView"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="345dp"
                    android:orientation="vertical"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp">


                <TextView
                        android:text="Activity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold|italic"
                        android:textAlignment="center"
                        android:paddingTop="10dp"/>

                <TextView
                        android:text="Activity adalah komponen yang dapat dilihat oleh pengguna, sehingga mereka dapat berinteraksi dengan aplikasi. "
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:id="@+id/textView"
                        android:textSize="14sp"
                        android:textAlignment="center"
                        android:layout_marginTop="5dp"/>

            </LinearLayout>
            <Button
                    android:text="Ganti Activity"
                    android:layout_width="398dp"
                    android:layout_height="54dp"
                    android:id="@+id/masuk"
                    android:layout_marginTop="10dp"
                    android:textAlignment="center"
                    android:layout_marginLeft="10dp"/>
        </LinearLayout>

</LinearLayout>