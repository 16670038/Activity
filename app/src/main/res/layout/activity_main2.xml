<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Main2Activity">
        <TextView
                android:layout_width="429dp"
                android:layout_height="wrap_content"
                android:text="KONTAK SAYA" android:textAlignment="center" android:paddingTop="20dp"
                android:textStyle="bold|italic" android:textSize="18sp"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="15dp"
                android:gravity="center">


            <LinearLayout android:layout_width="125dp"
                          android:layout_height="163dp"
                          android:orientation="vertical">
                <ImageView
                        android:layout_width="124dp"
                        android:layout_height="97dp"
                        app:srcCompat="@drawable/call"
                        android:id="@+id/dosen1"/>

                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:text="Dodik Wiratama P.P"
                          android:textSize="8sp"
                          android:textAlignment="center"
                          android:paddingTop="5dp"/>
                <Button
                        android:text="Telepon Saja :v"
                        android:layout_width="match_parent"
                        android:layout_height="34dp"
                        android:id="@+id/kontaksaya"
                        android:textAlignment="center"
                        android:textSize="6sp"/>

            </LinearLayout>

        </LinearLayout>
        <Button
            android:text="Ganti Activity"
            android:layout_width="398dp"
            android:layout_height="54dp"
            android:id="@+id/profil"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:layout_marginLeft="10dp"/>
</LinearLayout>